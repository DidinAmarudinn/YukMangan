<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.home.Profile">
<View
    android:background="@drawable/bgview"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/_190sdp"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentLeft="true"/>
<TextView
    android:id="@+id/txt_back"
    android:textSize="@dimen/_14sdp"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
    <ImageView
        android:padding="@dimen/_10sdp"
        android:background="@drawable/circleview"
        android:id="@+id/img_profile"
        android:layout_width="@dimen/_75sdp"
        android:layout_height="@dimen/_75sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"
        android:src="@drawable/profile"/>
    <TextView
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:textColor="@color/white"
        android:fontFamily="sans-serif"
        android:textSize="@dimen/_12sdp"
        android:id="@+id/txt_nama"
        android:text="@string/Nama"
        android:layout_below="@id/img_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

     <androidx.cardview.widget.CardView
         android:id="@+id/card"
         android:layout_below="@id/txt_nama"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="@dimen/_2sdp"
         android:layout_marginRight="@dimen/_12sdp"
         android:layout_marginLeft="@dimen/_12sdp"
         app:cardCornerRadius="@dimen/_12sdp"
         android:elevation="@dimen/_20sdp">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
               <TableLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <TableRow
                       android:layout_height="match_parent"
                       android:layout_width="match_parent"
                       android:gravity="center"
                       android:layout_gravity="center">

                       <TextView
                           android:id="@+id/txt_donasi"
                           android:layout_width="126dp"
                           android:layout_height="@dimen/_30sdp"
                           android:layout_alignParentStart="true"
                           android:layout_alignParentLeft="true"
                           android:gravity="center"
                           android:paddingTop="@dimen/_15sdp"
                           android:src="@drawable/ic_saldo"
                           android:text="DONASI" />

                       <TextView
                           android:paddingTop="@dimen/_15sdp"
                           android:id="@+id/txt_status"
                           android:text="STATUS"
                           android:layout_width="126dp"
                           android:layout_height="@dimen/_30sdp"
                           android:layout_alignParentStart="true"
                           android:layout_alignParentLeft="true"
                           android:src="@drawable/ic_saldo"
                           android:gravity="center"/>

                       <TextView
                           android:paddingTop="@dimen/_15sdp"
                           android:id="@+id/txt_group"
                           android:text="GROUP"
                           android:layout_width="126dp"
                           android:layout_height="@dimen/_30sdp"
                           android:layout_alignParentStart="true"
                           android:layout_alignParentLeft="true"
                           android:src="@drawable/ic_saldo"
                           android:gravity="center"/>
                   </TableRow>

                   <TableRow
                       android:layout_height="match_parent"
                       android:layout_width="match_parent"
                       android:gravity="center"
                       android:layout_gravity="center">

                       <ImageView
                           android:padding="@dimen/_6sdp"
                           android:id="@+id/gbr_uang2"
                           android:layout_width="126dp"
                           android:layout_height="@dimen/_30sdp"
                           android:layout_alignParentStart="true"
                           android:layout_alignParentLeft="true"
                           android:src="@drawable/ic_saldo" />

                       <ImageView
                           android:id="@+id/gbr_uang3"
                           android:layout_width="@dimen/_30sdp"
                           android:layout_height="@dimen/_30sdp"
                           android:layout_alignParentStart="true"
                           android:layout_alignParentLeft="true"
                           android:padding="@dimen/_6sdp"
                           app:srcCompat="@drawable/ic_check"/>

                       <ImageView
                           android:id="@+id/gbr_uang5"
                           android:layout_width="@dimen/_30sdp"
                           android:layout_height="@dimen/_30sdp"
                           android:padding="@dimen/_6sdp"
                           app:srcCompat="@drawable/ic_group" />
                   </TableRow>
                   <TableRow
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_gravity="center"
                       android:gravity="center">
                       <TextView
                           android:gravity="center"
                           android:textColor="#D50000"
                           android:text="100,000"
                           android:id="@+id/gbr_uang2a"
                           android:layout_width="@dimen/_30sdp"
                           android:layout_height="@dimen/_30sdp"
                           android:layout_alignParentStart="true"
                           android:layout_alignParentLeft="true"
                           android:padding="@dimen/_6sdp"
                           />

                       <TextView
                           android:id="@+id/gbr_uang3a"
                           android:text="MEMBER"
                           android:gravity="center"
                           android:layout_alignParentLeft="true"
                           android:layout_alignParentStart="true"
                           android:src="@drawable/ic_saldo"
                           android:padding="@dimen/_6sdp"
                           android:layout_width="@dimen/_30sdp"
                           android:layout_height="@dimen/_30sdp"/>
                       <TextView
                           android:text="100"
                           android:gravity="center"
                           android:id="@+id/gbr_uang5a"
                           android:src="@drawable/ic_saldo"
                           android:padding="@dimen/_6sdp"
                           android:layout_width="@dimen/_30sdp"
                           android:layout_height="@dimen/_30sdp"/>
                   </TableRow>
               </TableLayout>
            </RelativeLayout>
         </LinearLayout>
     </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:layout_below="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_12sdp">
       <TableLayout
           android:layout_marginTop="@dimen/_10sdp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center">
           <TableRow
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <TextView
                   android:id="@+id/hp"
                   android:layout_marginLeft="@dimen/_12sdp"
                   android:gravity="left"
                   android:layout_gravity="left"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:drawableStart="@drawable/ic_phone"
                   android:fontFamily="@font/robotomedium"
                   android:text="@string/NoHp"
                   android:textColor="@color/text_black"
                   android:textSize="@dimen/_12sdp"
                   tools:ignore="RtlCompat" />
           </TableRow>
           <TableRow
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <TextView
                   android:drawableStart="@drawable/ic_email"
                   android:id="@+id/email"
                   android:gravity="left"
                   android:layout_gravity="left"
                   android:layout_marginRight="@dimen/_12sdp"
                   android:layout_marginLeft="@dimen/_12sdp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/robotomedium"
                   android:text="@string/Email"
                   android:textColor="@color/text_black"
                   android:textSize="@dimen/_12sdp"
                   android:drawableLeft="@drawable/ic_email" />
           </TableRow>
           <TableRow
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <TextView
                   android:id="@+id/alamat"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_gravity="left"
                   android:layout_marginLeft="@dimen/_12sdp"
                   android:layout_marginRight="@dimen/_12sdp"
                   android:drawableLeft="@drawable/ic_add_location_black_24dp"
                   android:fontFamily="@font/robotomedium"
                   android:gravity="left"
                   android:text="@string/Alamat"
                   android:textColor="@color/text_black"
                   android:textSize="@dimen/_12sdp" />
           </TableRow>
           <TableRow
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <TextView
                   android:id="@+id/tgl_gabung"
                   android:gravity="left"
                   android:layout_gravity="left"
                   android:layout_marginRight="@dimen/_12sdp"
                   android:layout_marginLeft="@dimen/_12sdp"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:fontFamily="@font/robotomedium"
                   android:text="@string/tgl_gabung"
                   android:textColor="@color/text_black"
                   android:textSize="@dimen/_12sdp"
                   android:drawableLeft="@drawable/ic_date_range" />
           </TableRow>
           <TableRow
           android:layout_marginTop="@dimen/_50sdp"
               android:gravity="center"
               android:paddingBottom="@dimen/_1sdp"
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <Button
                   android:id="@+id/btn_profile_update"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_marginLeft="@dimen/_12sdp"
                   android:layout_marginRight="@dimen/_12sdp"
                   android:background="#00C853"
                   android:fontFamily="@font/robotomedium"
                   android:text="@string/Update"
                   android:textColor="@android:color/white"
                   android:textSize="@dimen/_18sdp"
                   />
           </TableRow>
           <TableRow
               android:padding="@dimen/_1sdp"
               android:gravity="center"
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <Button
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_marginLeft="@dimen/_12sdp"
                   android:layout_marginTop="@dimen/_6sdp"
                   android:layout_marginRight="@dimen/_12sdp"
                   android:background="#D50000"
                   android:fontFamily="@font/robotomedium"
                   android:text="@string/Logout"
                   android:textColor="@android:color/white"
                   android:textSize="@dimen/_18sdp" />
           </TableRow>
       </TableLayout>
    </RelativeLayout>
</RelativeLayout>