<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#f1f1f1"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.home.UpdateProfile">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:background="@drawable/bgview"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        />

    <ImageView
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        app:srcCompat="@drawable/ic_navigate_before_black_24dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:gravity="center"
        android:text="Validasi Rw"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:fontFamily="@font/robotomedium"
        android:textSize="@dimen/_16sdp" />
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:elevation="@dimen/_8sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_60sdp"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_12sdp"
        android:layout_below="@+id/imageView">
        <LinearLayout
            android:layout_margin="@dimen/_12sdp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_text_validasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dummytext"
                android:lineSpacingExtra="@dimen/_8sdp"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/robotomedium"
                />
               <RelativeLayout
                   android:gravity="center"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   >
                   <LinearLayout
                       android:id="@+id/copyToClipBoard"
                       android:layout_marginTop="@dimen/_12sdp"
                       android:layout_width="wrap_content"
                       android:layout_height="@dimen/_40sdp"
                       android:orientation="horizontal"
                       android:background="@drawable/btn_salin"
                       >
                       <TextView
                           android:textColor="@color/text_blue"
                           android:layout_marginLeft="@dimen/_12sdp"
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:text="Copy To Clipboard"
                           android:gravity="center"
                           />
                       <ImageView
                           android:layout_marginLeft="@dimen/_12sdp"
                           android:layout_marginRight="@dimen/_12sdp"
                           android:layout_width="@dimen/_30sdp"
                           android:layout_gravity="center"
                           android:layout_height="@dimen/_30sdp"
                           app:srcCompat="@drawable/ic_content_copy_black_24dp"
                           />
                   </LinearLayout>
               </RelativeLayout>

        </LinearLayout>
            
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_24sdp"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_12sdp"
        android:layout_below="@+id/cardView"
        app:cardCornerRadius="@dimen/_12sdp"
        app:cardElevation="@dimen/_8sdp">

        <LinearLayout
            android:id="@+id/btn_call_via_whatsapp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/ic_wa"
                />
            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginRight="@dimen/_12sdp"
                android:text="Hubungi Via WhatsApp"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/text_black"
                android:fontFamily="@font/robotomedium"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>