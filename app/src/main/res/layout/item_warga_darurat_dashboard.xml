<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.github.florent37.shapeofview.shapes.CircleView
        android:id="@+id/circle_container"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_13sdp"
        android:layout_marginBottom="@dimen/_13sdp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true">

        <ImageView
            android:id="@+id/iv_darurat"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:background="@color/text_red"
            android:layout_marginRight="@dimen/_13sdp"
            />

    </com.github.florent37.shapeofview.shapes.CircleView>


    <TextView
        android:id="@+id/tv_name_darurat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Faris Ghilmany"
        android:textColor="@color/text_black"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_toRightOf="@+id/circle_container"
        android:layout_alignTop="@id/circle_container"
        android:layout_toEndOf="@+id/circle_container"/>

    <TextView
        android:id="@+id/tv_alamat_darurat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bandung"
        android:layout_toRightOf="@+id/circle_container"
        android:layout_below="@id/tv_name_darurat"
        android:layout_alignBottom="@id/circle_container"
        android:layout_toEndOf="@+id/circle_container" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_18sdp"
        android:text="@string/lihat_detail"
        android:textSize="10sp"
        android:textColor="@color/text_white"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/bg_button_primary"/>
</RelativeLayout>